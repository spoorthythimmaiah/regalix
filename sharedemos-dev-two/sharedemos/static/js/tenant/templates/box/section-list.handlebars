{{#each sections}}
    {{# compare is_enabled '||' ../is_author }}
        {{# compare is_visible '||' ../is_author }}
            <div class="col-md-6 col-xs-12 pwt-wrap">
                {{#unless ../is_author}}
                    {{#if translations_available}}
                    <div class="translation_available" data-toggle="tooltip" data-placement="left" title="{{i18n 'Translations Available'}}"></div>
                    {{/if}}
                {{/unless}}

                <div class="pwt-box{{#unless is_enabled}} disabled{{/unless}} {{#unless ../can_edit}}uneditable{{/unless}} {{#if linked_asset }}asset-linked {{/if}}" slug='{{slug}}'>
                    <div class="{{#if repository_details.is_linked}} repository-linked {{#compare repository_details.sync_status '!=' 'COMPLETED'}} sync-inprogress {{/compare}} {{/if}}" title="{{#compare repository_details.sync_status '==' 'IN_PROGRESS'}}Sync in progress{{/compare}}"></div>
                    <div class="left">
                        <div class="outer-circle">
                            <div class="inner-circle">
                                <div class="secondary-fill-color progress{{#if progress_class}} {{progress_class}}{{/if}}">
                                    <div class="section-icon">
                                        <img src="{{icon.url}}" alt="{{icon.name}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="right">
                        <div class="title">
                            {{name}}
                            <!-- This span tag for locked content -->
                            <!-- <span class="lock"></span> -->
                        </div>
                        <div class="pwt-description">{{description}}</div>
                        {{#if tags}}
                            <div class="labels-container">
                            {{#each tags}}
                                <span class="sd-label theme-bg-color tags-span">{{this}}</span>
                            {{/each}}
                            </div>
                        {{/if}}
                    </div>
                </div>

            </div>
        {{/compare}}
    {{/compare}}
{{/each}}
{{#if is_author}}
{{#if can_edit}}
    <div class="create-new rippleEffect category"><p><span>+</span></br>add category</p></div>
{{/if}}
{{/if}}

