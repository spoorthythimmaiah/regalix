<div id="player-container" class="page-container">
    <div class="player_wrap"> 
        <!--  fade overlay -->
        <div class="overlay"></div>
        <div class="custom-popup-wrapper">
            <div class="custom-popup popup-in default-player" id="social-share-options">
                <div class="close-custom-popup close-icon" data-close></div>
                <div class="share-popup-wrap">
                    <div class="popup-scroll-wrap">
                        <h2>Share This Page</h2>
                        <p class="popup-desc">Share this page on your feed.</p>
                        <ul>
                            <li class="twitter">
                                <div class="social-icon" social-share="twitter">
                                    <span class="fa fa-twitter" aria-hidden="true"></span>
                                    <span class="title">Share with Twitter</span>
                                </div>
                            </li>
                            <li class="linkedin">
                                <div class="social-icon" social-share="linkedin">
                                    <span class="fa fa-linkedin-square" aria-hidden="true"></span>
                                    <span class="title">Share with Linkedin</span>
                                </div>
                            </li>
                            <li class="facebook">
                                <div class="social-icon" social-share="facebook">
                                    <span class="fa fa-facebook-square" aria-hidden="true"></span>
                                    <span class="title">Share with Facebook</span>
                                </div>
                            </li>
                            <li class="reddit">
                                <div class="social-icon" social-share="reddit">
                                    <span class="fa fa-reddit-square" aria-hidden="true"></span>
                                    <span class="title">Share with Reddit</span>
                                </div>
                            </li>
                            <li class="copyurl">
                                <div class="social-icon" social-share="copyurl">
                                    <span class="copy-url-icon"></span>
                                    <span class="title">Copy URL</span>
                                </div>                       
                            </li>
                            {{#if can_embed}}
                                <li class="copyembedurl">
                                    <div class="social-icon" social-share="copyembedurl">
                                        <span class="fa fa-code" aria-hidden="true"></span>
                                        <span class="title camel-case">embed player</span>
                                    </div> 
                                    <div class="embed-url-box">
                                        <div>{{i18n 'copy'}}: <span>&#8984;</span> - C {{i18n 'to copy'}}</div>
                                        <div class="embedURL"></div>
                                        <div class="close-embed-url capital-letter">{{i18n 'close'}}</div>
                                    </div>
                                </li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- left sidebar -->
        <div class="player-left-sidebar">
            <a href="#" class="circle-back-button"></a>
        </div>

        <!-- prgress indicator -->
        <div class="progress-line">
            <div></div>
        </div>

        <!-- mobile back button -->
        <div class="mobile-back">
            <a href="#"><i class="icon-left"></i></a>
        </div>

        <!-- Walkthrough Title -->
        <div class="side-info-opener"><span class="icon"><span></span></span><span type='demo-title'>{{walkthrough.name}}</span><span class="slide_information"><i class="fa fa-info-circle" aria-hidden="true"></i></span>
            {{#unless live_mode}}
                <span class="wt-draft">{{i18n 'draft'}}</span>
                {{#if published}}
                {{#if is_enabled}}
                <span class="wt-live">{{i18n 'live'}}</span>
                {{/if}}
                {{/if}}
            {{/unless}}
            {{#if tenant.is_rating_enabled}}
                <!-- content avg rating -->
                <div class="content-avg-rating">
                    <div class="avg-rating-star">
                        <div class="current-avg-rating" style="width: 0%;"></div>
                    </div>
                </div>
            {{/if}}
        </div>

        <!-- Toggle side menu block -->
        <div class="side-info">
                <div class="inner">
                <div class="back capital-letter" slug='{{section.slug}}'>{{i18n 'back'}}</div>
                <div class="frame ">
                    <div class="walkthrough-lists jcf-scrollable"></div>
                </div>
                <div class="bottom">
                    {{#if next_section}} 
                    <strong class="title capital-letter">{{i18n 'next section'}}:</strong>
                    <div class="next-section-name" section='{{next_section.slug}}'>
                        {{next_section.name}}
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- Player block -->
        <div id="player" class="player_wrapper"> 
            <div class="player_slider source-area" id="slider">
                <ul id="sdemos-player-box"></ul>
            </div>
            <div class="info-cta">
                <div class="left">
                        {{#if next_walkthrough}}
                        <div class="block">
                            <div class="text-block">
                                <div class="title-label camel-case">{{i18n 'next chapter'}}</div>
                                <div class="title">{{next_walkthrough.name}}</div>
                            </div>
                            {{#if next_walkthrough.image}}
                                <img class='cta-image' src="{{next_walkthrough.image.thumbnail}}"/>
                            {{/if}}
                            <div class="description">
                                {{{ next_walkthrough.text }}}
                            </div>
                            <div class="explore-btn capital-letter" slug='{{next_walkthrough.slug}}'>{{i18n 'explore'}}</div>
                        </div>
                        {{/if}}
                </div>
                <div class="right">
                    <div class="block signup-block">
                        {{#each section.cta_list}}
                            {{#compare type "==" 'form'}}
                                <div class="text-block">
                                    <div class="title1">{{campaign_message}}</div>
                                </div>
                                <button class="cta-signup" data-cta-id="{{cta_id}}">{{text}}</button>
                            {{/compare}}
                            {{#compare type "==" 'link'}}
                                <a class="cta-link" href="{{href}}" data-cta-id="{{cta_id}}" target="_blank">{{text}}</a>
                            {{/compare}}
                            {{#compare type "==" 'pdf'}}
                                <a class="cta-link" href="{{file_path}}" data-cta-id="{{cta_id}}" target="_blank">{{text}}</a>
                            {{/compare}}
                        {{/each}}
                    </div>
                    <div class="block thanku-block" {{#if section.cta_list.length}}style='display:none'{{/if}}>
                        <div class="title1 sub-title">{{i18n 'thank you'}}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile Menu toggle -->
        <img class="mobile-menu-toggle" src="/static/images/arrow-up-grey.png">
        <div class="close-mobile-full-screen"></div>
          
        <!-- Right side controll button block -->
        <div class="side-panel">
            <ul>
                <li><div class="full-screen-item full-screen-opener"><i class="icon-zoom"></i></div></li>
                <li><div class="notes-item notes-opener"><i class="icon-document"></i>
                    <div class="notes-icon">
                        <div></div>
                        <div></div>
                        <div></div>
                    </div>
                </div></li>
                {{#if tenant.is_messaging_enabled}}
                <li><div class="comments-item comments-opener"><i class="icon-chat"></i></div></li>
                {{/if}}
                <li><div class="language-item language-opener"><i class="icon-earth"></i></div></li>
                <li><div class="sb-bookmark-item bookmark-opener"><i class="icon-bookmark"></i></div></li>
                <li><div class="fullscreen-item fullscreen-opener"></div></li>
                <!-- social share -->
                {{#if live_mode}}
                {{#unless product.is_private}}
                <li>
                    <div class="social-share mobile" data-product-id="{{product.slug}}" data-section-id="{{section.slug}}" data-walkthrough-id="{{walkthrough.slug}}"></div>
                </li>
                {{/unless}}
                {{/if}}
            </ul>

            <!-- walkthrough player controlls -->
            <div class="control-holder">
                <div class="btn-prev customLink" target="prev"><i class="icon-left"></i></div>
                <div class="btn-next customLink" target="next"><i class="icon-right"></i></div>
            </div>

            <!-- sandbox help icon -->
            <div class="sandbox-help"></div>
            
        </div>
        <!-- social share -->
        {{#if live_mode}}
        {{#unless product.is_private}}
        <div class="social-share desktop" data-overlay="social-share" data-product-id="{{product.slug}}" data-section-id="{{section.slug}}" data-walkthrough-id="{{walkthrough.slug}}"></div>
        {{/unless}}
        {{/if}}

        
        <!-- desktop control buttons -->
        <div class="dt-btn-prev customLink" target="prev"></div>
        <div class="dt-btn-next customLink" target="next"></div>
        <!-- Toggle Slides Notes -->
        <div class="notes">
            <div class="inner" >
                <div class="sub-inner ">
                    <div class="notes-wrap jcf-scrollable ">
                        <div class="notes-wrap-outer">
                            <div class="notes-wrap-inner">
                                <h1 target="title"></h1>
                                <div class="anim1">
                                    <p target="body"></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="button-title">
                        <div class="notes-link"></div>
                    </div>
                </div>
                {{#if show_notes_edit}}
                    <div class="add-new-notes">
                        <div><span>+</span><br>add notes</div>
                    </div>
                    <div class="notes-edit-options">
                        <span class="delete-notes">delete</span>
                        <span class="edit-notes">edit</span>
                    </div>
                {{/if}}
                <div class="pagination-wrap"></div>

            </div>
        </div>

        <!-- languages -->
        <div class="language">
            <div class="inner">
                <div class="sub-inner">
                    <div class="language-block jcf-scrollable">
                        <div class="languages-wrap-outer">
                            <div class="languages-wrap-inner">
                                <div class="title camel-case">
                                    {{i18n 'languages'}}
                                </div>
                                <ul class="languages">
                                    {{#each locales}}
                                    <li{{#if selected}} class="selected"{{/if}} lvalue='{{locale}}'>
                                        <h3>{{name}}</h3>
                                    </li>
                                    {{/each}}
                                </ul>  
                            </div>
                        </div>
                    </div>
                    <div class="language-block-mobile">
                        <h4>{{i18n 'language select'}}</h4>
                        {{#compare locales.length '<' 2}}
                            <p>{{i18n 'this content is not available in another language.'}}</p>
                        {{/compare}}
                        {{#compare locales.length '>' 1}}
                            <p>{{i18n 'this content is available in another language. select a language to translate'}}</p>
                            <div class="languages-selector">
                                <div>
                                    <p>{{i18n 'current language'}}</p>
                                    <div class="selected-language">
                                        {{#each locales}}
                                            {{#if selected}} {{name}} {{/if}}
                                        {{/each}}
                                    </div>
                                </div>
                                <div>
                                    <p>{{i18n 'select language'}}</p>
                                    <select class="mobile-language-select">
                                        {{#each locales}}
                                            <option {{#if selected}} selected="selected" {{/if}} lvalue='{{locale}}'> {{name}} </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        {{/compare}}
                    </div>
                </div>
            </div>
        </div>
        <!-- End of languages -->

        <!-- mobile social share -->
        {{#if live_mode}}
        {{#unless product.is_private}}
        <div class="mobile-share">
            <div class="inner">
                <div class="sub-inner">
                    <div class="mobile-share-block">
                        <h4>{{i18n 'share this page'}}</h4>
                        <p>{{i18n 'share this page on your feed'}}</p>
                        <div class="share-icons">
                            <div class="social-icon" social-share="twitter"><span class="fa fa-twitter" aria-hidden="true"></span></div>
                            <div class="social-icon" social-share="linkedin"><span class="fa fa-linkedin" aria-hidden="true"></span></div>
                            <div class="social-icon" social-share="facebook"><span class="fa fa-facebook-square" aria-hidden="true"></span></div>
                            <div class="social-icon" social-share="reddit"><span class="fa fa-reddit-square" aria-hidden="true"></span></div>
                            <div class="social-icon" social-share="copyurl"><span class="copy-url-icon"></span></div>
                            {{#if can_embed}}
                                <div class="social-icon" social-share="copyembedurl"><span class="fa fa-code" aria-hidden="true"></span></div>
                                <div class="embed-url-box">
                                        <div class="embedURL"></div>
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/unless}}
        {{/if}}
        <!-- sandbox bookmarks to section links -->
        <div class="sandbox-bookmarks">
            <div class="inner">
                <div class="sub-inner">
                    <div class="sandbox-bookmark-wrap jcf-scrollable">
                        <ul class="bookmarks-wrap"></ul>  
                    </div>                    
                </div>
            </div>
        </div>
        <!-- End of sandbox bookmarks to section links -->

        <div class="form-cta">
            <div class="sign-up-wrap"></div>
        </div>

        <!-- comments -->
        <div class="comments">
            <div class="inner" >
                <div class="sub-inner">
                    <div class="lin-container-login">
                        <p>Do you have a comment?</p>
                        <div class="social-icon" id="linkedin-login" data-source="comment" data-social-login="linkedin">
                            <span class="fa fa-linkedin-square" aria-hidden="true"></span>
                            <span class="title">Log in with Linkedin</span>
                        </div>
                    </div>
                    <div class="comments-area">   
                        <div class="comment-list"></div>
                        <form class="comments-form" name="comments-form" method="POST">
                            <textarea placeholder="write your comment..."></textarea>
                            <div class="comment-footer">
                                <input type="submit" name="post-comment" value="POST COMMENT">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Rating popup -->
        <div class="player-popups">
            <div class="player-overlay">
                <div class="popup-wrap">
                    <!-- Login to rate a content/demo -->
                    <div class="popup-box" id="content-rating-login">
                        <div class="popup-title">
                            <h4>Your Opinion Counts!</h4>
                            <p>Help {{tenant.name}} make content that matters to you. Log in with Linkedin to submit your rating.</p>
                        </div>
                        <div class="popup-body">
                            <div class="linkedin">
                                <div class="social-icon" social-share="linkedin" data-source="rate" data-social-login="linkedin">
                                    <span class="fa fa-linkedin-square" aria-hidden="true"></span>
                                    <span class="title">Log in with Linkedin</span>
                                </div>
                            </div>
                        </div>
                        <div class="popup-footer">
                            <div class="form-footer">
                                <div class="cancel rippleEffect just-cancel" rel="popup-create-chapter">CANCEL</div>
                            </div>
                        </div>
                    </div>
