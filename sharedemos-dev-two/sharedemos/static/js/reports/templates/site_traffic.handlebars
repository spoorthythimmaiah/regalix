<div class="lib_cards shadow">
    <div class="lib_cards_container" id="site_visitors">
        <button data-trigger="hover"
            data-toggle="popover"
            data-placement="bottom"
            data-content="Site Visitors is the number of users that visited your content.">
            <span class="glyphicon glyphicon-question-sign"></span>
        </button>
        <h6>Site Visitors</h6>
        <div class="count">{{formatNumber users.count}}</div>
        <div class="lib_cards_stats {{#compare users.progress '<' 0}}dn{{/compare}}{{#compare users.progress '>=' 0}}up{{/compare}}">
            <span class="{{#compare users.progress '<' 0}}dn{{/compare}}{{#compare users.progress '>=' 0}}up{{/compare}}"></span>
            <span>{{formatNumber users.progress}}&#37 from last period</span>
        </div>
    </div>
</div>
