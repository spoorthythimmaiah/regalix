{{#if alert}}
<div class="popup-box" data-popup="alert">
    <div class="popup-title">
        warning
    </div>
    <div class="content-block">
        <div class="block">
            <div class="sub-title text-center">
                {{alert_message}}
            </div>
        </div>      
    </div>
    <div class="footer">
        <div class="block">
            <div class="cancel {{alert_action}}" data-popup="alert">OK</div>
        </div>
    </div>
</div>
{{/if}}

{{#if checklist}}
<div class="popup-box" data-popup="checklist">
    <div class="popup-title">
        {{#if is_edit}}{{ i18n 'edit checklist'}}{{else}}{{ i18n 'create new checklist'}}{{/if}}
    </div>
    <div class="content-block">
        <div class="block">
            <div class="title mandatory-field">{{ i18n 'checklist title'}}</div>
            <div class="sub-title">{{ i18n 'write a checklist title'}}</div>
            <input name="title" type="text" maxlength="200" autocomplete="off" placeholder="{{ i18n 'checklist' }}" />
            <div class="counter" id="checklist_title_counter">{{ i18n '200 characters left'}}</div>
        </div>
        <div class="block">
            <div class="title">{{ i18n 'checklist description'}}</div>
            <div class="sub-title">{{ i18n 'write a short description that best describes your checklist.'}}</div>
            <textarea name="description" maxlength="500" placeholder="{{ i18n 'description' }}"></textarea>
            <div class="counter" id="checklist_desc_counter">{{ i18n '500 characters left'}}</div>
        </div>
        <div class="block">
            <div class="title">{{ i18n 'featured'}}</div>
            <div class="sub-title">{{ i18n 'do you want your checklist featured?'}}</div>
            <div id="featured">
                <div class="option-check active">{{ i18n 'yes'}}</div>
                <div class="option-check">{{ i18n 'no'}}</div>
            </div>
        </div>
        <hr class="break"/>
        <div class="advanced">{{ i18n 'advanced'}}</div>
        <div class="block advanced-block">
            <div class="title">{{ i18n 'upload image'}}</div>
            <div class="sub-title">{{ i18n 'upload an image to go with your checklist'}}</div>
            <input type="file" name="upload-file" class="upload-file" id="upload-file" accept="image/*">
            <img class="img-preview">
            <div class="file-name">{{ i18n 'file name'}}</div>
            <div class="remove-file">{{ i18n 'remove'}}</div>
            <label for="upload-file">{{ i18n 'browse'}}</label>
        </div>
    </div>
    <div class="footer">
        <div class="block">
            <div class="cancel" data-popup="checklist">{{ i18n 'cancel'}}</div>
            <div class="save" data-popup="checklist" data-id="{{checklist_slug}}">{{ i18n 'save'}}</div>
        </div>
        <div class="form-failed">{{ i18n 'oops! saving failed'}}</div>
        <div class="form-sent">{{ i18n 'saved successfully!'}}</div>
        <div class="form-sending">{{ i18n 'saving...'}}<div class="cd-loading"></div></div>
    </div>
</div>
{{/if}}

