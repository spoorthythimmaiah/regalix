{{#if checklist_item}}
<div class="popup-box" data-popup="checklist_item">
    <div class="popup-title">
        {{#if is_edit}}{{ i18n 'edit checklist item'}}{{else}}{{ i18n 'create new checklist item'}}{{/if}}
    </div>
    <div class="content-block">
        <div class="block">
            <div class="title mandatory-field">{{ i18n 'checklist item text'}}</div>
            <div class="sub-title">{{ i18n 'write the main action text for this checklist item. (i.e. "install software")'}}</div>
            <input name="title" type="text" maxlength="100" autocomplete="off" placeholder="{{ i18n 'Text'}}" />
            <div class="counter" id="checklist_item_title_counter">{{ i18n '100 characters left'}}</div>
        </div>
        <div class="block">
            <div class="title">{{ i18n 'checklist item description'}}</div>
            <div class="sub-title">{{ i18n 'write a description about what this checklist item is for.'}}</div>
            <textarea name="description" maxlength="350" placeholder="{{ i18n 'description'}}"></textarea>
            <div class="counter" id="checklist_desc_counter">{{ i18n '350 characters left'}}</div>
        </div>
        <div class="block hide">
            <div class="title">{{ i18n 'suggested content'}}</div>
                <div class="sub-title">{{ i18n 'provide your user with internal or external content related to this checklist item.'}}</div>
                <div class="suggetsion_type">
                    <input type="radio" id="link_chapter" name="cta_type"  class="css-radio" checked="checked" value="cta-link">
                    <label class="css-radio-label" for="link_chapter">{{ i18n 'chapters from your internal library'}}</label>
                    <div class="content_suggestion">
                        <div class="browse" data-popup="add_suggested_chapters" data-popup-from="add_suggestions" data-id="{{item_id}}">{{ i18n 'browse your library'}}</div>
                        <div class="selected_chapters"></div>
                    </div>
                </div>
                <div class="suggetsion_type">
                    <input type="radio" id="link_external" name="cta_type"  class="css-radio" value="cta-link" >
                    <label class="css-radio-label" for="link_external">{{ i18n 'link to external content'}}</label>
                    <div class="content_suggestion disabled">
                        <div class="external-links"></div>
                        <input class="suggestion_link" placeholder="http://" type="url" disabled="true"/>
                        <div class="add_suggestion_link">{{ i18n 'add'}}</div>
                        <div class="loader"></div>
                    </div>
                </div>
        </div>
    </div>
    <div class="footer ">
        <div class="block">
            <div class="cancel" data-popup="checklist_item">{{ i18n 'cancel'}}</div>
            <div class="save" {{#if section_id}}section-id="{{section_id}}" {{/if}}
            {{#if item_id}}data-id="{{item_id}}"{{/if}}>{{ i18n 'save'}}</div>
        </div>
        <div class="form-failed">{{ i18n 'oops! saving failed'}}</div>
        <div class="form-sent">{{ i18n 'saved successfully!'}}</div>
        <div class="form-sending">{{ i18n 'saving...'}}<div class="cd-loading"></div></div>
    </div>
</div>
{{/if}}

