            <div class="back" data-popup="add_next_question"></div>
        {{/if}}
        {{i18n 'link existing question'}}
    </div>
    <div class="content-block">
        <div class="block">
            <input class="search" type="text" placeholder="Search Content" />
            <div class="link_block search_block">
                {{#if questions.length }}
