<!-- Add paths -->
{{#if add_path}}
<div class="popup-box add_path">
    <div class="popup-title camel-case">
        {{#if is_edit}}{{i18n 'edit path'}}{{else}}{{i18n 'create new path'}}{{/if}}
    </div>
    <div class="content-block">
        <div class="block">
            <div class="title mandatory-field">{{i18n 'path'}}</div>
            <div class="sub-title">{{i18n 'enter path title'}}</div>
            <input name="title" type="text" maxlength="100" autocomplete="off" placeholder="Path Title" />
            <div class="counter sub-title">{{title_limit}} {{i18n 'characters left'}}</div>
        </div>
        <div class="block">
            <div class="title">{{i18n 'description'}}</div>
            <div class="sub-title">{{i18n 'enter path description'}}</div>
            <textarea name="description" maxlength="200" placeholder="Path Description"></textarea>
            <div class="counter sub-title">{{description_limit}} {{i18n 'characters left'}}</div>
        </div>
        <div class="block">
            <div class="title">{{i18n 'upload image'}}</div>
            <div class="sub-title">{{i18n 'upload an image to go with your path'}}</div>
            <input type="file" class="upload-file" id="upload-file" accept="image/*" >
            <img class="img-preview">
            <div class="file_name sub-title">{{i18n 'file name'}}</div>
            <div class="remove_file capital-letter">{{i18n 'remove'}}</div>
            <label for="upload-file">{{i18n 'browse'}}</label>
        </div>
    </div>
    <div class="footer">
        <div class="block">
            <div class="cancel" rel="add_path">{{i18n 'cancel'}}</div>
            <div class="save">{{i18n 'save'}}</div>
        </div>
        <div class="form-failed">{{i18n 'oops! saving failed'}}</div>
        <div class="form-sent">{{i18n 'saved successfully!'}}</div>
        <div class="form-sending">{{i18n 'saving'}}...<div class="cd-loading"></div></div>
    </div>
</div>
{{/if}}

{{#if add_question}}
