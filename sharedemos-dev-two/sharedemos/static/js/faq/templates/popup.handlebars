{{#if group}}
<div class="popup-box" data-popup="group" {{#if is_edit}}data-slug={{slug}}{{/if}}>
    <div class="popup-title">
        {{#if is_edit}}{{i18n 'edit faq group'}}{{else}}{{i18n 'create new faq group'}}{{/if}}
    </div>
    <div class="content-block">
        <div class="block">
            <div class="title mandatory-field">{{i18n 'faq group name'}}</div>
            <div class="sub-title">{{i18n 'provide a name for this faq group (i.e. "support faq")'}}</div>
            <input name="name" type="text" maxlength="50" autocomplete="off" {{#if is_edit}}value="{{name}}"{{/if}} placeholder="Name" />
            <div class="counter">50 {{i18n 'characters left'}}</div>
        </div>
        <div class="block">
            <div class="title">{{i18n 'faq group description'}}</div>
            <div class="sub-title">{{i18n 'write a description about this faq group'}}.</div>
            <textarea name="description" maxlength="350" placeholder="Description">{{#if is_edit}}{{description}}{{/if}}</textarea>
            <div class="counter">350 {{i18n 'characters left'}}</div>
        </div>
        <hr class="break"/>
        <div class="advanced">{{i18n 'advanced'}}</div>
        <div class="block advanced-block{{#if is_edit}}{{#if icon}} image-added{{/if}}{{/if}}">
            <div class="title">{{i18n 'upload cover image'}}</div>
            <div class="sub-title">{{i18n 'upload a cover image to go with this faq group'}}</div>
            <input type="file" class="upload-file" id="upload-file" accept="image/*">
            <img class="img-preview" {{#if is_edit}}{{#if icon}} data-icon-id='{{icon.id}}' src='{{icon.url}}'{{/if}}{{/if}}>
            <div class="file-name">{{#if is_edit}}{{#if icon}}{{icon.name}}{{else}}File name{{/if}}{{/if}}</div>
            <div class="remove-file">{{i18n 'remove'}}</div>
            <label for="upload-file">{{i18n 'browse'}}</label>
        </div>
    </div>
    <div class="footer">
        <div class="block">
            <div class="cancel" data-popup="group">{{i18n 'cancel'}}</div>
            <div class="save">{{i18n 'save'}}</div>
        </div>
        <div class="form-failed capital-letter">{{i18n 'oops! saving failed'}}</div>
        <div class="form-sent capital-letter">{{i18n 'saved successfully!'}}</div>
        <div class="form-sending capital-letter">{{i18n 'saving'}}...<div class="cd-loading"></div></div>
    </div>
</div>
{{/if}}

