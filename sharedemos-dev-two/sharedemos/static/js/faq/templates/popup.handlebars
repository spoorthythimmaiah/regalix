{{#if qna}}
    <div class="popup-box" data-popup="qna" {{#if is_edit}}data-id={{id}}{{/if}} data-section-id={{section_id}}>
    <div class="popup-title">
        {{#if is_edit}}{{i18n 'edit'}}{{else}}{{i18n 'create new'}}{{/if}} {{i18n 'Question and Answer'}}
    </div>
    <div class="content-block">
        <div class="block">
            <div class="title mandatory-field">{{i18n 'question'}}</div>
            <div class="sub-title">{{i18n 'write a question to answer'}}</div>
            <input name="question" type="text" maxlength="200" {{#if is_edit}}value="{{question}}"{{/if}} autocomplete="off" placeholder="Question" />
            <div class="counter">200 {{i18n 'characters left'}}</div>
        </div>
        <div class="block rte">
            <div class="title mandatory-field">{{i18n 'answer'}}</div>
            <div class="sub-title">{{i18n 'write and format the answer using text editor'}}.</div>
            <div class="thumb-wrap">
                {{#unless is_edit}}
                    <img src='/static/images/author/RTE-thumb.png' />
                {{/unless}}
                <div id="preview" class="fr-view"></div>
            </div>
            <textarea name="answer" placeholder="Answer">{{#if is_edit}}{{answer}}{{/if}}</textarea> 
        </div>
    </div>
    <div class="footer">
        <div class="block">
            <div class="cancel" data-popup="qna">{{i18n 'cancel'}}</div>
            <div class="save">{{i18n 'save'}}</div>
        </div>
        <div class="form-failed capital-letter">{{i18n 'oops! saving failed'}}</div>
        <div class="form-sent capital-letter">{{i18n 'saved successfully!'}}</div>
        <div class="form-sending capital-letter">{{i18n 'saving'}}...<div class="cd-loading"></div></div>
    </div>
</div>
{{/if}}

{{#if confirm_delete}}
<div class="popup-box confirm_delete">
    <div class="popup-title delete-title">
            delete {{entity_type}}
        </div>
        <div class="content-block">
            <div class="block">
                <div class="sub-title text-center">
                   {{i18n "you've made some cool stuff!"}}<br><br>
                   {{i18n 'are you sure want to permanently delete this'}} {{entity_type}}?
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="block">
                <div class="cancel" rel="confirm_delete">cancel</div>
                <div class="confirm-delete delete" data-type={{entity_type}} data-id={{entity_id}}>{{i18n 'delete'}}</div>
            </div>
            <div class="form-failed capital-letter">{{i18n 'oops! your work was not saved'}}.</div>
            <div class="form-sent capital-letter">{{i18n 'success! your work has successfully been deleted.!'}}</div>
            <div class="form-sending capital-letter">{{i18n 'deleting'}}...<div class="cd-loading"></div></div>
        </div>
    </div>
{{/if}}

