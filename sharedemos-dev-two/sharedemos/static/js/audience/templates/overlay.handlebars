{{#if is_company}}
<div class="add_company_modal">
    <div class="close"></div>
    <div class="modal_wrap">
        <div class="modal_title">{{#if is_editing}}Update{{else}}Add{{/if}} Company Profile</div>
        <div class="tab_menu_wrap">
            <div class="menu active" data-target="name">NAME</div>
            <div class="menu" data-target="message">MESSAGE</div>
        </div>
        <div class="tab_block active" data-target="name">
            <div class="block">
                <div class="title mandatory-field">COMPANY NAME</div>
                <div class="sub_title">Provide company name for this profile.</div>
                <input type="text" name="name" placeholder="Name" autocomplete="off" {{#if name}}value="{{name}}"{{/if}}> 
                <div class="error"></div>
            </div>
            <div class="block">
                <div class="title mandatory-field">COMPANY WEBSITE</div>
                <div class="sub_title">Enter the URL for this company. Employees will need to have this domain in their email.</div>
                <input type="url" name="website" placeholder="http://" autocomplete="off" {{#if website_url}}value="{{website_url}}"{{/if}}> 
                <div class="error"></div>
            </div>
            <div class="btn goto_message{{#if is_editing}} active{{/if}}" data-target="message">MESSAGE</div>
        </div>
         <div class="tab_block" data-target="message">
            <div class="block">
                <div class="title mandatory-field">GREETING MESSAGE</div>
                <div class="sub_title">Write a message that will be displayed to visitors before gaining access to your content</div>
                <textarea placeholder="Message" name="message" maxlength="{{message_limit}}">{{#if message}}{{message}}{{/if}}</textarea>
                <div class="error"></div>
                <div class="counter"><span>{{#if message }}{{math message_limit '-' message.length}}{{else}}{{message_limit}}{{/if}}</span> Characters Left</div>
            </div>
            <div class="btn backto_name" data-target="name">&nbsp;</div>
            <div class="btn create_profile{{#if message.length}} active{{/if}}">{{#if is_editing}}UPDATE{{else}}CREATE{{/if}} PROFILE</div>
        </div>
    </div>
</div>
{{/if}}
{{#if is_employee}}
<div class="add_employee_modal">
    <div class="close"></div>
    <div class="modal_wrap">
        <div class="modal_title">{{#if is_editing}}Update Employee Details{{else}}Add Employee to Company Profile{{/if}}</div>
        <div class="block">
            <div class="title mandatory-field">FIRST NAME</div>
            <div class="sub_title">Enter employee’s first name.</div>
            <input type="text" name="firstName" placeholder="First Name" autocomplete="off" {{#if first_name}}value="{{first_name}}"{{/if}}> 
            <div class="error"></div>
        </div>
        <div class="block">
            <div class="title mandatory-field">LAST NAME</div>
            <div class="sub_title">Enter employee’s last name.</div>
            <input type="text" name="lastName" placeholder="Last Name" autocomplete="off" {{#if last_name}}value="{{last_name}}"{{/if}}> 
            <div class="error"></div>
        </div>
        <div class="block">
            <div class="title mandatory-field">EMAIL</div>
            <div class="sub_title">Enter employee’s email address. They will use this email to log in and access your content.</div>
            <input type="email" name="email" placeholder="Email" autocomplete="off" {{#if email}}value="{{email}}"{{/if}}> 
            <div class="error"></div>
        </div>
        <div class="btn add_employee{{#if is_editing}} active{{/if}}">{{#if is_editing}}UPDATE{{else}}ADD{{/if}} EMPLOYEE</div>
    </div>
</div>
{{/if}}
{{#if is_share}}
<div class="audience_overlay">
    <div class="popup-wrap">
        <div class="popup-box share_content_popup">
            <div class="popup-title">
                Share Content
            </div>
            <div class="content-block">
                <div class="block">
                    <div class="title mandatory-field">Choose Content</div>
                    <div class="sub-title">Select the content from your library that you would like to share with this profile.<br>
                        Employees added to this profile will receive a private URL to gain access.
                    </div>
                    <div class="browse_library">BROWSE YOUR LIBRARY</div>
                    <div class="category_selected"></div>
                </div>
                <div class="block">
                    <div class="title mandatory-field">ACCESS LINK EXPIRATION</div>
                    <div class="sub-title">Choose when the links to your content will expire. Upon expiration employees
                    from this company profile will not have access to your content. </div><br>
                    <div class="sub-title">Expiration Date:</div>
                    <input type="text" name="date" class="expire_date" placeholder="Choose Date" autocomplete="off" readonly>
                </div>
            </div>
            <div class="footer">
                <div class="block">
                    <div class="cancel" rel="add_path">CANCEL</div>
                    <div class="share">SHARE CONTENT</div>
                </div>
                <div class="form-failed">OOPS! SHARING FAILED</div>
                <div class="form-sent">SHARED SUCCESSFULLY!</div>
                <div class="form-sending">SHARING...<div class="cd-loading"></div></div>
            </div>
        </div>
        <div class="popup-box choose_share_content_popup">
            <div class="popup-title">
                Choose Content to Share
                <div class="back"></div>
            </div>
            <div class="content-block">
                <div class="block site_map" id="select-share-category"></div>
            </div>
            <div class="footer">
                <div class="block">
                    <div class="cancel" rel="add_path">CANCEL</div>
                    <div class="choose">CHOOSE</div>
                </div>
                <div class="form-failed">OOPS! SAVING FAILED</div>
                <div class="form-sent">SAVED SUCCESSFULLY!</div>
                <div class="form-sending">SAVING...<div class="cd-loading"></div></div>
            </div>
        </div>
    </div>
</div>
{{/if}}
